{
  "nginx": {
    "#": "See docs at http://community.opscode.com/cookbooks/nginx",
    "version": "1.4.4",
    "#": "Error when building from source if configure flags aren't manually specified :-(",
    "configure_flags": ["--with-http_ssl_module", "--with-http_gzip_static_module"]
  },
  "mysql": {
    "#": "See http://community.opscode.com/cookbooks/mysql",
    "server_root_password": "iloverandompasswords",
    "allow_remote_root": false
  },
  "rvm": {
    "user_installs": [
      {
        "user": "www",
        "default_ruby": "ruby-2.0.0"
      }
    ],
    "vagrant": {
        "system_chef_solo": "/opt/vagrant_ruby/bin/chef-solo"
    }
  },
  "run_list": [
    "apt",
    "mysql::client",
    "mysql::server",
    "basic_config",
    "rvm::user_install",
    "nginx::http_gzip_static_module",
    "nginx::source",
    "rails_server"
  ]
}
